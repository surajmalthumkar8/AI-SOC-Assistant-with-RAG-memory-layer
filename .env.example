# Splunk Configuration
SPLUNK_HOST=localhost
SPLUNK_PORT=8089
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=your_password_here
SPLUNK_TOKEN=

# Agent Configuration
AGENT_PORT=8080
NODE_PORT=3000

# Debug Mode
DEBUG=true

# SSL Configuration (set to false for local dev)
SPLUNK_VERIFY_SSL=false

# Splunk Native MCP Endpoint
SPLUNK_MCP_ENDPOINT=https://localhost:8089/services/mcp

# LLM Configuration (for AI-powered analysis)
# Supported providers: gemini, openai, claude
LLM_PROVIDER=gemini
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# WEB ENRICHMENT API KEYS (Optional)
# ===========================================
# Get free API keys from these sources:

# VirusTotal (https://www.virustotal.com/gui/join-us)
# Free tier: 4 requests/minute
VIRUSTOTAL_API_KEY=

# AbuseIPDB (https://www.abuseipdb.com/register)
# Free tier: 1000 requests/day
ABUSEIPDB_API_KEY=

# Shodan (https://account.shodan.io/register)
# Free tier: limited queries
SHODAN_API_KEY=

# GreyNoise (https://viz.greynoise.io/signup)
# Community API is free, no key required
GREYNOISE_API_KEY=

# AlienVault OTX (https://otx.alienvault.com/accounts/signup/)
# Free, unlimited
ALIENVAULT_API_KEY=

# ===========================================
# WEB SEARCH API KEYS (Optional)
# ===========================================
# Web search works without keys using DuckDuckGo
# For better results, configure one of these:

# Serper.dev (https://serper.dev) - Google Search API
# Free tier: 2500 queries/month
SERPER_API_KEY=

# Google Custom Search (https://developers.google.com/custom-search)
# Free tier: 100 queries/day
GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# ===========================================
# RAG MEMORY LAYER
# ===========================================
# Enable/disable the RAG pipeline
RAG_ENABLED=true

# Number of results to retrieve per collection during investigation
RAG_TOP_K=5

# Directory for ChromaDB persistent storage (default: soc-agent/rag_data/)
# RAG_DATA_DIR=
